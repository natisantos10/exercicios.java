class exercicio04{
    public static void main(String[] args){
        Scanner scan = new Scanner(System.in);

        System.out.println("Informe a primeira nota");
         double = primeriaNota = scan.nextInt();

         System.out.println("Informe a segunda nota");
          double = segundaNota = scan.nextInt();

          System.out.println("Informe a terceira nota");
          double = terceiraNota = scan.nextInt();

          
          System.out.println("Informe a quarta nota");
          double = quartaNota = scan.nextInt();

          double media = (primeriaNota + segundaNota + terceiraNota + quartaNota)/4

          System.out.println("A media da nota Ã© " + media)

    }

}
